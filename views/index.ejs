<!DOCTYPE html>
<html lang="en">

<head>
    <%include partials/templates/head.ejs%>
</head>

<body>
    <header>
        <%include partials/templates/navbar.ejs%>

    </header>

    <section>
        <div class="container">
            <div class="row">


                <%cafes.forEach(function(item,index){%>

                <div class=<%if(index>0){%>"col-sm-6 col-md-4"<%}else{%>"col-sm-12" <%}%> >
                    <div class="thumbnail">
                        <img <%if(index==0){%>id="center-cropped" <%}%> src="<%=item.photo%>" alt="...">
                        <span class="rating"><%=item.rating%></span>
                        <div class="caption">
                            <h3><%=item.name%></h3>
                            <p><%=item.address%></p>
                            <p><i class="fa fa-map-marker" aria-hidden="true"></i> <%=item.distance%></p>
                        </div>
                    </div>
                </div>
                <%});%>


            </div>
        </div>

    </section>
    <script src="https://code.jquery.com/jquery-3.2.0.min.js" integrity="sha256-JAW99MJVpJBGcbzEuXk4Az05s/XyDdBomFqNlM3ic+I=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</body>

</html>
